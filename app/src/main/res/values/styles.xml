<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionModeShareDrawable">@drawable/ic_action_share</item>
        <item name="android:actionOverflowButtonStyle">@style/customOverFlowMenu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_back</item>
    </style>

    <!--overflow menu icon-->
    <style name="customOverFlowMenu" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_more</item>
    </style>

    <!--Collapsed Toolbar-->
    <style name="CollapsedAppBarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#00BFA5</item>
    </style>

    <style name="DetailLabels" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="Details" >
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">fill</item>
    </style>
    
</resources>
