<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ConcertDetailActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/concert_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_concert_detail_title"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"/>

            <TextView
                android:id="@+id/concert_detail_title"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_formatted_date"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"/>

            <TextView
                android:id="@+id/concert_detail_formatted_date"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_formatted_location"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"/>

            <TextView
                android:id="@+id/concert_detail_formatted_location"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_ticket_url"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket URL:"/>

            <TextView
                android:id="@+id/concert_detail_ticket_url"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"/>


            <TextView
                android:id="@+id/label_concert_detail_ticket_type"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Type:"/>

            <TextView
                android:id="@+id/concert_detail_ticket_type"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_ticket_status"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket Status:"/>

            <TextView
                android:id="@+id/concert_detail_ticket_status"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_description"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"/>

            <TextView
                android:id="@+id/concert_detail_description"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_artist_name"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name:"/>

            <TextView
                android:id="@+id/concert_detail_artist_name"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_artist_website"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Website:"/>

            <TextView
                android:id="@+id/concert_detail_artist_website"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_venue_name"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue Name:"/>

            <TextView
                android:id="@+id/concert_detail_venue_name"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_venue_place"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue Place:"/>

            <TextView
                android:id="@+id/concert_detail_venue_place"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_venue_city"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue City:"/>

            <TextView
                android:id="@+id/concert_detail_venue_city"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/label_concert_detail_venue_country"
                style="@style/DetailLables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue Country:"/>

            <TextView
                android:id="@+id/concert_detail_venue_country"
                style="@style/Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="@dimen/appbar_elevation">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/concert_detail_artist_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:layout_collapseMode="parallax"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:background="@drawable/scrim_gradient"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>